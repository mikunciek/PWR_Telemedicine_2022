<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="6dp"
    android:id="@+id/cardTask">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow android:paddingStart="10dp">
            <ImageView
                android:id="@+id/task_status_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <TextView
                android:id="@+id/fullName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Imię i nazwisko"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/md_deep_purple_500"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow android:paddingStart="10dp">

        </TableRow>

        <TableRow android:paddingStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="Rozpoczęto" />
            <TextView
                android:id="@+id/startTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:text="Start" />
        </TableRow>
        
        <TableRow android:paddingStart="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="Zakończono" />
            <TextView
                android:id="@+id/endTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:text="Stop" />
        </TableRow>
<TableRow android:paddingStart="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="Status" />
    <TextView
        android:id="@+id/statusTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="textStart"
        android:text="Status" />

</TableRow>
<TableRow android:paddingStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="Wynik" />
    <TextView
        android:id="@+id/resultTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="textStart"
        android:text="Wynik" />

</TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>