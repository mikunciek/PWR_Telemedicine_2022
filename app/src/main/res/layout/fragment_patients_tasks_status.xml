<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PatientsTasksStatusFragment"
    android:orientation="vertical"
    android:background="@drawable/cut_card_background">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stan zadań"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:textColor="@color/md_deep_purple_500"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >

    <TableRow
        android:padding="10dp"
        android:paddingVertical="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Imię i nazwisko" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Zadanie"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Start" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Stop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Wynik" />

    </TableRow>
    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/fab_margin"
        android:id="@+id/mainRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/list_task_status" />



</LinearLayout>